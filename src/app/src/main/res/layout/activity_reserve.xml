<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/textview_reserve_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="주문 상세내역"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/textview_reserve_timetitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="방문 예정 시간"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textview_reserve_title"
        />
    <Spinner
        android:id="@+id/spinner_reserve_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/textview_reserve_timetitle"
        />
    <TextView
        android:id="@+id/textview_reserve_menutitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="구매 예정 음식"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/spinner_reserve_time"
        />
    <Spinner
        android:id="@+id/spinner_reserve_menu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/textview_reserve_menutitle"

        />
    <Button
        android:id="@+id/button_reserve_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="진짜 오다 내리기"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>